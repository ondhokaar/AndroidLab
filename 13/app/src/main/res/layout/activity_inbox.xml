<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inbox"
    android:id="@+id/inbox">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inbox_rv"
        android:layout_width="361dp"
        android:layout_height="526dp"
        android:layout_above="@+id/writemsg"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/writemsg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/writemsg"
        android:layout_width="309dp"
        android:layout_height="46dp"
        android:layout_below="@+id/inbox_rv"
        android:layout_marginStart="12dp"
        android:hint="write msg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inbox_rv"
        app:layout_constraintVertical_bias="0"
        tools:visibility="visible" />

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/writemsg"
        app:layout_constraintTop_toBottomOf="@+id/inbox_rv"
        app:layout_constraintVertical_bias="0.955" />


</androidx.constraintlayout.widget.ConstraintLayout>